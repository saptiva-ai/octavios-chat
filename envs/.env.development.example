# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================

# Database
MONGODB_URL=mongodb://localhost:27017/copilotos_bridge_dev
REDIS_URL=redis://localhost:6379/1

# Security (development-friendly values)
JWT_SECRET_KEY=dev-secret-key-not-for-production
PASSWORD_HASH_ROUNDS=4

# Email / Password Reset
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=support@saptiva.com
SMTP_PASSWORD=your-gmail-app-password-here
SMTP_FROM_EMAIL=support@saptiva.com
PASSWORD_RESET_URL_BASE=http://localhost:3000

# Server
HOST=0.0.0.0
PORT=8001
DEBUG=true
RELOAD=true
LOG_LEVEL=DEBUG

# CORS (permissive for development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# External APIs (use demo/test endpoints)
SAPTIVA_API_URL=https://api.saptiva.ai/demo
ALETHEIA_API_URL=https://aletheia.saptiva.ai/demo

# Rate limiting (relaxed for development)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Development tools
MONGO_EXPRESS_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Monitoring (disabled for dev)
OTEL_ENABLED=false
SENTRY_DSN=

# ============================================================================
# CAPITAL414 AUDITOR (MCP Plugin)
# ============================================================================
# Set USE_MCP_AUDITOR=true to use the MCP plugin instead of local code
USE_MCP_AUDITOR=false
CAPITAL414_AUDITOR_URL=http://capital414-auditor:8002
CAPITAL414_AUDITOR_PORT=8002
CAPITAL414_AUDITOR_TIMEOUT=120