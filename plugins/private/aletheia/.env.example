# ===========================================
# Aletheia Deep Research - Environment Configuration
# ===========================================

# API Configuration
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===========================================
# Saptiva AI Settings (REQUIRED)
# ===========================================
# Obtén tu API key en: https://lab.saptiva.com
SAPTIVA_API_KEY=your_saptiva_api_key_here
SAPTIVA_MODEL_PLANNER=Saptiva Ops
SAPTIVA_MODEL_WRITER=Saptiva Cortex
SAPTIVA_BASE_URL=https://api.saptiva.com/v1
SAPTIVA_TIMEOUT=120
SAPTIVA_MAX_RETRIES=3
SAPTIVA_CONNECT_TIMEOUT=30
SAPTIVA_READ_TIMEOUT=60

# ===========================================
# Tavily Search Settings (REQUIRED)
# ===========================================
# Obtén tu API key en: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_SEARCH_DEPTH=advanced
TAVILY_MAX_RESULTS=15
TAVILY_TIMEOUT=60

# ===========================================
# Vector Database
# ===========================================
VECTOR_BACKEND=weaviate
WEAVIATE_HOST=http://localhost:8080
WEAVIATE_TIMEOUT=60

# ===========================================
# Telemetry & Monitoring
# ===========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=aletheia-deepresearch
ENABLE_TELEMETRY=true
METRICS_ENABLED=true

# ===========================================
# Storage
# ===========================================
ARTIFACTS_DIR=./runs
DATA_DIR=./runs
LOGS_DIR=./logs

# ===========================================
# Performance Settings
# ===========================================
API_WORKERS=2
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300
KEEP_ALIVE=5

# ===========================================
# Security & Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# ===========================================
# Health Checks
# ===========================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
